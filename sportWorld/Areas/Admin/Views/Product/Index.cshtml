@model List<Product>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Product Page</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Product
			</a>
		</div>
	</div>




<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Product Name
			</th>
			<th>
				Description
			</th>
			<th>
				Brand
			</th>
			<th>
				List Price
			</th>
			<th>
				Price 
			</th>
			<th>
				Price20
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.OrderBy(u => u.Id))
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.Description</td>
				<td>@obj.Brand</td>
				<td>@obj.ListPrice</td>
				<td>@obj.Price</td>
				<td>@obj.Price20</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash3-fill"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}

	</tbody>
</table>

</div>
